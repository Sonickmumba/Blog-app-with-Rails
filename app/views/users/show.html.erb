<%= stylesheet_link_tag "user_show.css" %>

<div class="main-container">
  <div class="show-co">
    <div class="user-icon-container">
      <div class="user-icon"> </div>
    </div>

    <div class="user-details">
      <div class="user-name"><%= @user.name %></div>
      <div class="user-posts-div"><p class="user-posts">Number of posts: <%= @user.posts_counter %></p></div>
    </div>
  </div>

  <div class="bio-container">
    <p class="bio-title">Bio</p>
    <p class="bio"><%= @user.bio %></p>
  </div>

  <div class="posts-container">
    <% @user.recent_post.each do |post| %>
      
      <%= link_to user_post_path(user_id: post.author_id, id: post.id), class: 'pp' do %>
        <div class="pst-id">
          <div class="post-container">
            <div>Post: <%= post.id %></div>
            <div class="bio-text"><%= post.text %></div>
          </div>

          <div class="counts-container">
            <p>Comments: <%= post.comments_counter %> ,</p>
            <p>Likes: <%= post.likes_counter %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="all-posts"><%= link_to 'See all posts', user_posts_path(user_id: @user.id), class: "posts-btn" %></div>
  </div>
</div>
