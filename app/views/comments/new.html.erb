<%= stylesheet_link_tag "comment_new.css" %>

<div class="comm-container">
  <h1 class="comment-title">Add A New Comment</h1>
  <%= form_with model: @comment, url: user_post_comments_path, class: "add-comment" do |form| %>
    <div class="comment-add-form">
    <%= form.text_area :text, placeholder: "Add text", class: "comment-textarea", cols: 40, rows: 20 %> <br>
    <%= form.submit "Add Comment", class: "comment-button" %>
    </div>
  <% end %>
</div>
